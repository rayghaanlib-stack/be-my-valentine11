 <script>
  function yes() {
    document.getElementById("answer").style.display = "block";
    popHearts();
  }

  function popHearts() {
    const card = document.querySelector(".card");

    for (let i = 0; i < 12; i++) {
      const heart = document.createElement("div");
      heart.className = "heart-pop";
      heart.textContent = "ğŸ’–";

      const x = Math.random() * (card.clientWidth - 20);
      const y = Math.random() * (card.clientHeight - 20);

      heart.style.left = x + "px";
      heart.style.top = y + "px";

      card.appendChild(heart);

      setTimeout(() => {
        heart.remove();
      }, 1500);
    }
  }

  function moveNo() {
    const button = document.querySelector(".no-btn");
    const card = document.querySelector(".card");

    const maxX = card.clientWidth - button.offsetWidth - 20;
    const maxY = card.clientHeight - button.offsetHeight - 20;

    const x = Math.random() * maxX;
    const y = Math.random() * maxY;

    button.style.left = x + "px";
    button.style.top = y + "px";
  }
</script>

